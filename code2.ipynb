def shopping_list(lst):
    if len(lst) > 0:
        print("*The User's Shopping List Is*")
        i = 1
        for j in lst:
            print(i, ".", j[0], ",", j[1])
            i += 1
    else:
        print("!!!! The List Is Empty !!!!")

def remove_shopping_list(lst):
    shopping_list(lst)
    remove = int(input("Enter The Item Number To Be Removed From Your Shopping List:"))
    if 1 <= remove <= len(lst):
        removed_item = lst.pop(remove - 1)
        print("The Item", removed_item[0], "Successfully Removed From Your Shopping List")
    else:
        print("!!! Invalid Input From The User !!!")

def total_price(items,lst):
    grand_total=0
    for i,j in lst:
        for k,l in items[j]:
            if k==i:
                grand_total+=l[0]
                break
    print("The Total Price According To The Users Shopping List is:", grand_total)

