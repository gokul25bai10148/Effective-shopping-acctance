def categories(items):
    print("Item categories:")
    i_c = list(items.keys())
    i = 1
    for key in items:
        print(i, ".", key)
        i += 1
    return i_c

def show_products(items):
    i_c = categories(items)
    ch = int(input("Enter the Choice of category That the user want to view:"))
    if 1 <= ch <= len(items):
        category_chosen = i_c[ch - 1]
        print("\nItems in", category_chosen, ";\n")
        i = 1
        for Item, info in items[category_chosen]:
            print(i, ".", Item, ",price:", info[0], " ,calorie content:", info[1], "calories")
            i += 1
    else:
        print("!!! The Choice Entered Is Invalid !!!")

